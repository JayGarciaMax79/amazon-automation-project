{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "python3.9",
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/generate-article",
      "destination": "/api/generate-article.py"
    },
    {
      "source": "/api/scrape-amazon",
      "destination": "/api/scrape-amazon.py"
    },
    {
      "source": "/api/webhook",
      "destination": "/api/webhook.py"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.py"
    },
    {
      "source": "/api/docs",
      "destination": "/api/docs.py"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/docs",
      "destination": "https://amazon-automation-docs.vercel.app"
    }
  ]
}
