  "name": "amazon-automation-project",
  "functions": {
    "api/*.py": {
      "runtime": "python3.11",
      "maxDuration": 300
    }
  },
  "env": {
    "AIzaSyBuoXbCF0QyXQGDeMd_lUDNMSWF9y97dPo": "@openai_api_key",
    "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”: "@openai_api_base",
    "https://docs.google.com/spreadsheets/d/1hmf3CW7yBRusVz2kr2tI4IIC4Ghi51lo57z4khg0sac": "@google_sheets_api_key",
    "jayjayhustkemax@gmail.com": "@google_service_account_email",
    "https://myamzdeals.shop/wp-json/wp/v2/": "@wordpress_api_url",
    “arteinusual@gmail.com: "@wordpress_username",
    “Max”Garcia25@: "@wordpress_password",
    "https://hook.eu2.make.com/23t7pcei5jaof95vxaa3l6dun2k3xvx1L": "@make_webhook_url"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/generate-article",
      "destination": "/api/generate-article.py"
    },
    {
      "source": "/api/scrape-amazon",
      "destination": "/api/scrape-amazon.py"
    },
    {
      "source": "/api/webhook",
      "destination": "/api/webhook.py"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.py"
    },
    {
      "source": "/api/docs",
      "destination": "/api/docs.py"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/docs",
      "destination": "https://amazon-automation-docs.vercel.app"
    }
  ]
}



